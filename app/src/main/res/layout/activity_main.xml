<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hector.botonescolores.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:id="@+id/botonFondo"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fondo Rojo" />

        <Button
        android:id="@+id/botonLetras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"
        android:text="Letras Negras" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/muestra"
            android:layout_width="106dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:text="Mopstrar" />

        <TextView
            android:id="@+id/oculto"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Esto es el mensaje oculto"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:text="Haz un click largo"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="247dp">

        <RatingBar
            android:id="@+id/estrellas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <TextView
            android:id="@+id/cuentaEstrellas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/estrellas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:text="[0/5]"
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout
   >
